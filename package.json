{
    "name": "sunbear",
    "version": "0.1.0",
    "description": "Authorization library for SQL",
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "files": [
        "dist/"
    ],
    "scripts": {
        "build-ts": "./node_modules/.bin/tsc",
        "build": "npm run build-ts",
        "clean": "rm -r ./dist || true",
        "lint": "eslint --ext .ts --max-warnings 0 --fix src examples",
        "test": "jest --runInBand",
        "prepack": "npm run clean && npm run lint && npm run build && find ./dist -name '*.map' -delete"
    },
    "engines": {
        "node": ">=12"
    },
    "author": "InScreen, Inc.",
    "repository": "https://github.com/inscreen/sunbear",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^27.5.1",
        "@types/node": "^17.0.23",
        "@types/pg-format": "^1.0.2",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "eslint": "^8.12.0",
        "eslint-plugin-import": "^2.26.0",
        "jest": "^28.1.0",
        "prettier": "^2.6.2",
        "ts-jest": "^28.0.2",
        "ts-node": "^10.7.0",
        "typeorm": "^0.2.41",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "@types/pg": "^8.6.5",
        "pg-format": "^1.0.4",
        "typeorm": "^0.2.41"
    }
}